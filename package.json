{
    "name": "ketih-control-centre-be",
    "version": "1.0.0",
    "description": "Serverless aws-nodejs-typescript template",
    "main": "serverless.ts",
    "scripts": {
        "husky-configure": "yarn husky install && yarn husky add .husky/pre-commit \"yarn --no-install lint-staged\"",
        "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}'",
        "lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,ts,json}": [
            "yarn format"
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "typescript",
            "prettier"
        ]
    },
    "engines": {
        "node": ">=14.15.0"
    },
    "dependencies": {
        "@hapi/boom": "^10.0.0",
        "@middy/core": "^2.5.3",
        "@middy/do-not-wait-for-empty-event-loop": "^3.1.0",
        "@middy/http-event-normalizer": "^3.1.0",
        "@middy/http-header-normalizer": "^3.1.0",
        "@middy/http-json-body-parser": "^2.5.3"
    },
    "devDependencies": {
        "@serverless/typescript": "^3.0.0",
        "@types/aws-lambda": "^8.10.71",
        "@types/node": "^14.14.25",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "esbuild": "^0.14.11",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-typescript": "^3.0.0",
        "husky": "^8.0.1",
        "json-schema-to-ts": "^1.5.0",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "serverless": "^3.0.0",
        "serverless-esbuild": "^1.23.3",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.3"
    },
    "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
    "license": "MIT"
}
